<div class="blog_head">
  <div class="avatar">
    <%= image_tag 'avatar_icon.gif' %>
  </div>
  <div class="post_title" id="post<%= object.id %>">
    <div class="title_box">
      <h2><%= link_to object.title, object %></h2>
    </div>
    <div>
      <ul>
        <li>Author:</li>
        <li><%= link_to object.user.name, "mailto:#{object.user.email}" %></li>
        <li>Post Date: </li>
        <li class="post_date"><%= object.created_at.strftime("%m/%d/%Y") %></li>
        <li>Email: </li>
        <li><%= link_to object.user.email, "mailto:#{object.user.email}" %></li>
        <% if signed_in? %>
            <li>Post Controls:</li>
            <li><%= link_to 'Edit', edit_post_path(object) %></li>
            <li><%= link_to "Delete", object, method: :delete,
                             data: { confirm: "You sure?" },
                             title: object.title %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr>
</div>