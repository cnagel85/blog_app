<% provide(:title, 'Blog') %>
<div id="blog_post">
    <% if Post.any? %>
      <% Post.all(:order => 'created_at DESC', :limit => 3).each do |post| %>
        <%= render 'layouts/bloghead' , object: post%>
        <div id="blog_body">
            <%= simple_format post.content %>
        </div>
      <% end %>
    <% else %>
        No Recent Posts
    <% end %>
</div>