<li>
  <div id="post_list_title"><%= link_to post.title, post %></div>
  <div id="post_list_timestamp">
    <%= post.created_at.strftime("%m/%d/%Y") %>
  </div>
  <div id="delete_post">
      <% if current_user?(post.user) %>
          <%= link_to "delete", post, method: :delete,
                      data: { confirm: "You sure?" },
                      title: post.title %>
      <% end %>
  </div>
</li>