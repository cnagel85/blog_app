<% provide(:title, @user.name) %>

<div class="user_title">
  <div class="avatar"><%=  image_tag 'avatar_icon.gif', alt: 'Corey'  %></div>
<h2>
  <%= @user.name %>
</h2>
</div>
<hr>
<div class="user_body">
  <div>
    <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <div class="digg_pagination">
        <%= will_paginate @posts %>
        </div>
    <% end %>
  </div>

</div>